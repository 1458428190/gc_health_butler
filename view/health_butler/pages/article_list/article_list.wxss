.nav {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #efefef;
  width: 100%;
  position:fixed;
  top: 0rpx;
  height: 3vh;
  padding: 0rpx 15rpx;
}

.nav button {
  font-size: 30rpx;
  height: 60rpx;
  padding: 0rpx 11rpx;
  margin: 0rpx;
  background-color: white;
}

.select {
  font-size: 35rpx;
  color: #1ECBBE;
}

.nav button::after {
  border: none;
}

.articleContent {
    top: 80rpx;
    bottom: 0rpx;
    width: 100%;
    height: 93vh;
    position: fixed;
    overflow-y: scroll;
    overflow-x: hidden;
    margin-top: 0rpx;
    padding-top: 0rpx;
}

.abstract {
  width: 100%;
  height: 180rpx;
  border-bottom: 12rpx solid #efefef;
  margin: 0rpx;
  padding: 0rpx;
}

.thumbnail {
  width: 200rpx;
  height: 180rpx;
  float: left;
  margin-right: 20rpx;
  margin-left: 10rpx;
  margin-top: 0rpx;
}

.see {
  width: 35rpx;
  height: 25rpx;
  margin-left: 180rpx;
  margin-right: 0rpx;
}

.article {
  margin-top: 0rpx;
  padding-top: 0rpx;
}

.title {
  display: flex;
  font-size: 30rpx;
  height: 70rpx;
  margin-right: 15rpx;
  padding-top: 8rpx;
  padding-bottom: 20rpx;
}

.keyword {
  border: 2rpx solid #42f80a;
  border-radius: 15rpx;
  color: greenyellow;
  margin: 5rpx 10rpx;
  margin-bottom: 0rpx;
  font-size: 25rpx;
  padding: 0rpx 3rpx;
}

.articleInfo {
  margin-top: 30rpx;
}

.articleInfo text{
  font-size: 25rpx;
  margin: 0rpx 5rpx;
}

.noMore {
  text-align: center;
  padding: 20rpx 0rpx;
}