.clock_in_container {
  background-color: white;
  display: table;
  margin-right: 0;
  height: 100vh;
  width: 100%;
}

.nav {
  margin: 10rpx 0rpx;
  padding-top: 20rpx;
  color: black;
  font-weight: bold;
}

.nav text{
  padding: 10rpx 52rpx;
}

.select_nav {
  color: #1ECBBE;
  border-bottom: 5rpx solid #1ECBBE; 
}

.clock_info {
  /* border: 2rpx solid #1ECBBE; */
  /* box-shadow: 0rpx 2rpx 4rpx 2rpx #1ECBBE; */
  border-radius: 50rpx;
  margin: 30rpx 20rpx 20rpx 20rpx;
  padding-bottom: 20rpx;
}

.impData {
  font-weight: bold;
  /* font-size: 48rpx; */
  color: #1ECBBE;
}

.continue_info {
  margin: 10rpx 10rpx;
  font-size: 28rpx;
  padding: 5rpx 15rpx;
  display: flex;
  flex-direction: row;
  padding-right: 0rpx;
}

.continue_info button::after {
  border: none;
}

.no_clockIn_button,.cancelRemind {
  display: inline;
  border-radius: 40rpx;
  margin: 0rpx 5rpx 0rpx 350rpx;
  outline: none;
  padding: 2rpx 5rpx;
  color: white;
  font-size: 30rpx;
  background-color: #1ECBBE;
  /* height: 42rpx; */
  width: 80rpx;
  height: 80rpx;
}

