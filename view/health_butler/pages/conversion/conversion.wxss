.block {
  display: table;
  padding: 10rpx 5rpx;
}

.goods {
  padding: 10rpx 2%;
  border-radius: 20rpx;
  border: 1rpx solid #efefef;
  width: 45%;
  float: left;
  margin: 10rpx 0rpx;
}

.goods image {
  width: 100%;
  height: 250rpx;
}

.goods .name{
  font-size: 35rpx;
  font-weight: bold;
  width: 90%;
  height: 80rpx;
}

.goods_data {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}

.price {
  color: #1ECBBE;
  margin-right: 10rpx;
  font-weight: bold;
}

.price text {
  font-size: 35rpx;
}

.surplus {
  color: rgb(199, 199, 201);
  padding-top: 6rpx;
}

.goods button::after {
  border:none;
}

.goods button {
  background-color: #1ECBBE;
  font-size: 40rpx;
  line-height: 50rpx;
  color: white;
  margin: 15rpx 15rpx;
}

