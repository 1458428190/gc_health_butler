.food_detail_container {
  display: table;
}

.food_detail_container>image {
  width: 100%;
  height: 400rpx;
}

.food_detail_container>view {
  padding-left: 30rpx;
}

.name {
  font-size: 50rpx;
  font-weight: bold;
}

.info view {
  margin: 20rpx 10rpx 10rpx 0rpx;
}

.info text {
  color: #b4acac;
}

.affect>view>text, .nutrition>view>text {
  display: inline-block;
  background-color: blue;
  font-size: 40rpx;
  color: white;
  margin: 10rpx 0rpx;
  padding: 10rpx 5rpx;
  border-radius: 10rpx;
}

.affect>text, .nutrition>text {
  font-size: 37rpx;
  line-height: 60rpx;
}

.nutrition {
  margin-left: 0rpx;
  padding-left: 0rpx;
  padding-bottom: 20rpx;
  border-bottom: 15rpx solid #efefef;
}

.function {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0rpx;
}

.function image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.avoid_food,.suit_food {
  margin: 30rpx 0rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #efefef;
}

.avoid_food>text:first-child {
  color: red;
}

.foods_avoid,.food_suit {
  border-bottom: 15rpx solid #efefef;
}

.suit_food>text:first-child {
  color: green;
}


