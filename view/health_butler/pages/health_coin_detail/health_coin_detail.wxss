.coin_detail_container {
  background-color: #1ECBBE;
  display: table;
  width: 100%;
  height: 100vh;
}

.head {
  border-radius: 20rpx;
  margin: 10rpx 20rpx;
  height: 240rpx;
  border: 1rpx solid #636580;
  text-align: center;
  font-size: 33rpx;
  font-weight: bold;
  background-color: white;
}

.coin {
  color: #1ECBBE;
  margin-top: 20rpx;
}

.sum_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.sum {
  float: left;
  margin: 20rpx auto;
  align-items: center;
  font-size: 30rpx;
  line-height: 35rpx;
  font-weight: normal;
}

.sum_data {
  margin-bottom: 10rpx;
}

.balance {
  font-size: 45rpx;
}

.detail {
  border-radius: 25rpx;
  border: 1rpx solid #636580;
  background-color: white;
  margin: 20rpx 20rpx;
}

.nav {
  border-bottom: 1rpx solid #efefef;
  text-align: center;
  padding: 20rpx 20rpx;
}

.border_left {
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.border_right {
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.nav view {
  border-radius: 15rpx;
  border: 2rpx solid #1ECBBE;
  display: inline;
  color: #1ECBBE;
}

.nav text:first-child {
  border-right: 1rpx solid #1ECBBE;
}

.nav text {
  padding: 0rpx 20rpx;
}

.deal {
  border-bottom: 1rpx solid #efefef;
  padding: 15rpx 35rpx;
}

.deal text {
  display: flex;
  font-size: 30rpx;
}

.deal>view:first-child {
  float: right;
  margin: 25rpx 40rpx;
  color: orange;
}

.deal>view>image:first-child {
  float: left;
  padding-top: 5rpx;
}

.select {
  color: white;
  background-color: orange;
}

.no_detail {
  font-size: 40rpx;
  align-items: center;
  text-align: center;
  margin: 100rpx 0rpx;
}

.middle_icon {
  width: 50rpx;
  height: 50rpx;
}

.icon {
  width: 35rpx;
  height: 35rpx;
  float: left;
}