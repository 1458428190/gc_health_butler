.home_page_container {
  display: table;
  width: 100%;
}

swiper-item {
  display: inline-block;
  height: 36vh;
}

.cover {
  width: 100%;
  height: 36vh;
}

.cover image{
  width: 100%;
  height: 36vh;
}

.info {
  width: 100%;
  border-radius: 20rpx;
  margin: 0rpx 0rpx;
}

.me {
  border-radius: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  text-align: center;
  padding: 10rpx 10rpx;
}

.head_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 10rpx 5rpx;
  padding-right: 0rpx;
  margin-right: 0rpx;
}

.me_info {
  width: 120rpx;
  margin: 10rpx 0rpx;
  margin-top: 14rpx;
  padding-left: 0rpx;
  margin-left: 10rpx;
  text-align: left;
}

.me_data {
  display: flex;
  flex-direction: row;
  margin: 10rpx 0rpx;
  margin-top: 14rpx;
  margin-left: 5rpx;
  padding-right: 0rpx;
}

.me_data>view {
  margin: 0rpx 8rpx;
}

.me_info>view:first-child {
  font-weight: bold;
}

.me_info>view:last-child,.me_data>view>view:last-child  {
  font-size: 25rpx;
  color: rgb(168, 168, 160);
}

.me_info text{
  width: 120rpx;
  height: 50rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}

.me_data>view>view:first-child {
  /* color: #FACC14; */
  font-weight: bold;
}

.me_data>view:first-child>view:first-child {
  color: black;
}

ff-canvas {
  width: 95%;
  height: 50vh;
}

.stepData {
  position: absolute;
  top: 47vh;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #1ECBBE;
  border-radius: 40rpx 40rpx 0rpx 0rpx;
  box-shadow: 0rpx 4rpx 8rpx 8rpx rgb(0, 219, 201);
  margin: 15rpx 20rpx;
}

.stepData>view:first-child {
  position: fixed;
  top: 49vh;
  border-radius: 10rpx;
  border: 1rpx solid #efefef;
  font-size: 30rpx;
}

.stepData>view>text:first-child {
  border-right: 1rpx solid #efefef;
}

.stepData text{
  padding: 0rpx 10rpx;
}

.select {
  color: #1ECBBE;
}

.reward {
  color: black;
}

.rewardIcon {
  width: 70rpx;
  height: 70rpx;
  margin: 10rpx 0rpx 10rpx 10rpx;
}

/* 弹窗样式 */
/*button*/  
.btn {  
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #000;  
  color: #fff;  
}  
  
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  overflow: hidden;  
}  
  
/*content*/  
.drawer_box {  
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 3px;  
}  
  
.drawer_title{  
  padding:15px;  
  font: 20px "microsoft yahei";  
  text-align: left;  
}  
.drawer_content {  
  height: 120px;  
  overflow-y: scroll; /*超出父盒子高度可滚动*/  
}  
  
.btn_ok, .btn_cancel{  
  padding: 10px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  color: #1ECBBE;  
  float: left;
  margin: 10rpx 100rpx;
  font-size: 40rpx;
}  
  
.top{  
    padding-top:8px;  
}  
.bottom {  
    padding-bottom:8px;  
}  
.title {  
    height: 30px;  
    line-height: 30px;  
    width: 160rpx;  
    text-align: center;  
    display: inline-block;  
    font: 300 28rpx/30px "microsoft yahei";  
}  
  
.input_base {  
    border: 2rpx solid #ccc;  
    padding-left: 10rpx;  
    margin-right: 50rpx;  
}  
.input_h30{  
    height: 30px;  
    line-height: 30px;  
}  
.input_h60{  
    height: 60px;  
}  
.input_view{  
    font: 12px "microsoft yahei";  
    background: #fff;  
    color:#000;  
    line-height: 30px;  
}  
  
input {  
    font: 12px "microsoft yahei";  
    background: #fff;  
    color:#000 ;  
}  
radio{  
    margin-right: 20px;  
}  
.grid { display: -webkit-box; display: box; }  
.col-0 {-webkit-box-flex:0;box-flex:0;}  
.col-1 {-webkit-box-flex:1;box-flex:1;}  
.fl { float: left;}  
.fr { float: right;}

.drawer_title image{
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx 20rpx 10rpx 200rpx;
  float: left;
}

.drawer_box .coin input{
  font: 40rpx "microsoft yahei";  
  background: rgb(255, 255, 255);  
  border-radius: 4rpx;
  border: 1rpx solid #efefef;
  color:#000;  
  width: 200rpx;
}

.drawer_content>view {
  display: flex;
  flex-direction: row;
}

.drawer_box view>text:first-child {
  font-size: 40rpx;
  margin-left: 40rpx;
  width: 200rpx;
}

.option {
  border-top: 2rpx #efefef solid;
}

.tip {
  color: white;
  margin-top: 100rpx;
}